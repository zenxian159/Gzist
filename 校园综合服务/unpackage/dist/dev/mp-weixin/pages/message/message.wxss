
.chat-list {
  padding: 30rpx;
}
.chat-item {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 2rpx solid #ddd;
}
.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.info {
  flex: 1;
  width:200px;
  display: flex;
  flex-direction: column;
}
.nickname {
  font-weight: bold;
  margin-bottom: 10rpx;
}
.last-msg {
  color: #666;
  font-size: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  width: 200px;
}
.time {
  font-size: 24rpx;
  color: #999;
  margin-left: 20rpx;
}
