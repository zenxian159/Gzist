
page {
  background-color: #f4f5f7;
}
.job-detail-card {
  background: #fff;
  margin: 30rpx;
  padding: 40rpx;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.05);
}
.job-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 20rpx;
}
.job-info {
  font-size: 32rpx;
  color: #444;
  margin-top: 10rpx;
  padding: 16rpx 0;
  border-bottom: 2rpx solid #eee;
}
.contact-btn {
  background: #ff5722;
  color: white;
  text-align: center;
  padding: 20rpx;
  border-radius: 16rpx;
  margin-top: 40rpx;
  transition: background 0.3s;
}
.contact-btn:active {
  background: #ff784e;
}
